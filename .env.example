# Environment Variables Template
# Copy this file to .env and fill in your values

# Twitter API (required for live data collection)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_TOPIC=tweets_raw

# ElasticSearch Configuration
ELASTICSEARCH_NODES=elasticsearch:9200
ELASTICSEARCH_INDEX=brand_tweets

# Brand Monitoring Keywords (comma-separated)
TRACK_KEYWORDS=TechnoGadget,TechnoPhone,#TechnoPhone
